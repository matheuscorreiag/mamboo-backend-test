generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

enum TaskStatus {
  PENDING
  IN_PROGRESS
  REVIEW
  DONE
}

model Tasks {
  id          String     @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  description String
  status      TaskStatus @default(PENDING)
}
